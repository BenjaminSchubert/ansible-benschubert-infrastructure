{{ template_warning }}
---
http:
  routers:
    mailpit:
      rule: Host(`{{ hostname }}`)
      service: mailpit
      priority: 10
      tls: { {% if ingress_traefik_certificates_resolvers %}"certResolver": "default"{% endif %} }
      middlewares:
        - mailpit-auth@file

    mailpit-auth:
      rule: Host(`{{ hostname }}`) && PathPrefix(`/outpost.goauthentik.io/`)
      priority: 15
      service: authentik@file

    mailpit-icon:
      rule: Host(`{{ hostname }}`) && PathPrefix(`/mailpit.svg`)
      service: mailpit@file
      priority: 15
      tls: { {% if ingress_traefik_certificates_resolvers %}"certResolver": "default"{% endif %} }

  services:
    mailpit:
      loadBalancer:
        servers:
          - url: http://mailpit:8025

  middlewares:
    mailpit-auth:
      forwardAuth:
        address: http://auth:9000/outpost.goauthentik.io/auth/traefik
        trustForwardHeader: true
        authResponseHeaders:
          - X-authentik-username
          - X-authentik-groups
          - X-authentik-email
          - X-authentik-name
          - X-authentik-uid
          - X-authentik-jwt
          - X-authentik-meta-jwks
          - X-authentik-meta-outpost
          - X-authentik-meta-provider
          - X-authentik-meta-app
          - X-authentik-meta-version
