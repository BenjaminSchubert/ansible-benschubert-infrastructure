{{ template_warning }}
---
http:
  routers:
    mimir:
      rule: Host(`{{ hostname }}`)
      service: mimir
      priority: 10
      tls: { {% if ingress_traefik_certificates_resolvers %}"certResolver": "default"{% endif %} }
      middlewares:
        - mimir-host-header@file
        - mimir-auth@file

    mimir-auth:
      rule: Host(`{{ hostname }}`) && PathPrefix(`/outpost.goauthentik.io/`)
      priority: 15
      service: authentik@file

  services:
    mimir:
      loadBalancer:
        servers:
          - url: http://monitoring-mimir:9009

  middlewares:
    mimir-auth:
      forwardAuth:
        address: http://auth:9000/outpost.goauthentik.io/auth/traefik
        trustForwardHeader: true
        authResponseHeaders:
          - X-authentik-username
          - X-authentik-groups
          - X-authentik-email
          - X-authentik-name
          - X-authentik-uid
          - X-authentik-jwt
          - X-authentik-meta-jwks
          - X-authentik-meta-outpost
          - X-authentik-meta-provider
          - X-authentik-meta-app
          - X-authentik-meta-version

    mimir-host-header:
      headers:
        customRequestHeaders:
          X-Forwarded-Host: "{{ hostname }}:{{ ingress_exposed_https_port }}"
